---
import Layout from "../layouts/Layout.astro";
import Map from "../sections/Map.astro";
import TitleBar from "../sections/TitleBar.astro";
import { Icon } from 'astro-icon/components'
---

<Layout>
    <TitleBar title="Contáctanos" />
    <section class="grid grid-cols-1 md:grid-cols-2">
        <div class="py-5">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-5 p-10">
                <div class="p-2">
                    <Icon name="whatsapp" class="text-5xl text-primary" />
                    <h2 class="uppercase text-xl font-medium mt-3">Teléfono</h2> 
                    <p class="text-sm mt-3">WhatsApp: +51 988 801 315<br/>At. al cliente: +51 955 148 675</p>
                </div>
                <div class="p-2">
                    <Icon name="map" class="text-5xl text-primary" />
                    <h2 class="uppercase text-xl font-medium mt-3">Dirección</h2> 
                    <p class="text-sm mt-3">Av. El Polo 740, Of. C-414, C.C. El Polo, Surco, Lima.</p>
                </div>
                <div class="p-2">
                    <Icon name="mail" class="text-5xl text-primary" />
                    <h2 class="uppercase text-xl font-medium mt-3">Email</h2> 
                    <p class="text-sm mt-3">info@gastrolabperu.com</p>
                </div>
            </div>
            <form action="" class="p-10">
                <h2 class="uppercase text-xl font-medium">Escribe tu mensaje</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-10">
                    <input type="text" class="w-full border border-black/30 px-2 py-1 text-sm" placeholder="Nombre">
                    <input type="text" class="w-full border border-black/30 px-2 py-1 text-sm" placeholder="Email">
                    <input type="text" class="w-full border border-black/30 px-2 py-1 text-sm" placeholder="Asunto">
                </div>
                <textarea name="" rows="10" class="w-full border border-black/30 px-2 py-1 mt-5" placeholder="Mensaje"></textarea>
                <button 
                    type="submit" 
                    class="text-xs font-bold text-white bg-primary rounded-full px-7 py-3 border border-primary transition-colors duration-300 uppercase hover:bg-white hover:text-primary hover:border hover:border-primary mr-auto mt-5 block max-w-[300px] text-center drop-shadow-xl drop-shadow-primary/30 cursor-pointer">
                    Enviar
                </button>
            </form>
        </div>
        <Map heightMap="100%" />
    </section>
</Layout>