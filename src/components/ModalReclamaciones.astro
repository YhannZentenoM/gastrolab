<!-- Modal (solo hidden por defecto) -->
<div id="reclamaciones-modal" class="fixed inset-0 bg-[conic-gradient(at_top_right,rgba(204,249,223,0.8),rgba(209,214,255,0.8))] items-center justify-center z-50 hidden">
    <div class="bg-white w-full max-w-6xl rounded-lg shadow-lg relative p-6 max-h-[90vh] overflow-y-auto">
        <button id="recla-lose-modal" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700 text-2xl font-bold">&times;</button>
