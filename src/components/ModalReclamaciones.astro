                  </div>
                  <div class="sm:col-span-2">
                    <input type="email" placeholder="Correo electrónico" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
              
                  <!-- Representante legal -->
                  <div class="sm:col-span-2 text-sm font-semibold text-gray-600 mt-4">Datos del representante legal (si corresponde):</div>
                  <div>
                    <input type="text" placeholder="Nombre completo" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
                  <div>
                    <input type="text" placeholder="Domicilio" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
                  <div>
                    <input type="text" placeholder="N° de documento de identidad" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
                  <div>
                    <input type="text" placeholder="Teléfono" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
                  <div class="sm:col-span-2">
                    <input type="email" placeholder="Correo electrónico" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
              
                  <!-- Identificación del producto o servicio -->
                  <div class="sm:col-span-2">
                    <input type="text" placeholder="Producto o servicio contratado" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ...">
                  </div>
              
                  <!-- Detalle de la reclamación -->
                  <div class="sm:col-span-2">
                    <textarea placeholder="Detalle del reclamo o queja" rows="4" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ..."></textarea>
                  </div>
              
                  <!-- Pedido del consumidor -->
                  <div class="sm:col-span-2">
                    <textarea placeholder="Pedido del consumidor" rows="3" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ..."></textarea>
                  </div>
              
                  <!-- Observaciones del proveedor -->
                  <div class="sm:col-span-2">
                    <textarea placeholder="Observaciones y acciones adoptadas por el proveedor" rows="3" class="block w-full rounded-md py-2.5 border border-gray-300 px-4 ..."></textarea>
                  </div>
              
                  <!-- Validación electrónica -->
                  <div class="sm:col-span-2 flex items-center gap-2">
                    <input id="valida" type="checkbox" class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary">
                    <label for="valida" class="text-sm text-gray-700">Declaro que estoy de acuerdo con el contenido del presente reclamo o queja.</label>
                  </div>
              
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-2.5 bg-primary font-bold text-base  text-white rounded-md transition-all duration-500">Registrar reclamo </button>
                  </div>
              </form>
              
        </div>
      <slot />
    </div>
  </div>
  
  <script is:inline>
    document.addEventListener('astro:page-load', () => {
      const modalRecla = document.getElementById('reclamaciones-modal');
      const closeModal = document.getElementById('recla-lose-modal');
      const openButtons = document.querySelectorAll('.open-modal-reclamaciones');
      
      // Mostrar el modal
      openButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          document.body.classList.add('no-scroll');
          modalRecla?.classList.remove('hidden');
          modalRecla?.classList.add('flex'); // ✅ agregamos flex dinámicamente
        });
      });
  
      // Cerrar modal con X o clic afuera
      function cerrarModal() {
        modalRecla?.classList.remove('flex');
        modalRecla?.classList.add('hidden');
        document.body.classList.remove('no-scroll');
      }
  
      closeModal?.addEventListener('click', cerrarModal);
  
      modalRecla?.addEventListener('click', (e) => {
