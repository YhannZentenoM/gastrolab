                  </div>
                  <div>
                    <input type="text" placeholder="Código de identificación" class="block w-full rounded-md py-2.5 px-4 text-dark text-base font-medium border border-gray-300 focus:border-primary focus:outline-0 placeholder:text-light placeholder:text-base">
                  </div>
              
                  <!-- Fecha del reclamo o queja -->
                  <div>
                    <input type="date" placeholder="Fecha del reclamo o queja" class="block w-full rounded-md py-2.5 px-4 text-dark text-base font-medium border border-gray-300 focus:border-primary focus:outline-0 placeholder:text-light placeholder:text-base">
                  </div>
              
                  <!-- Nombre y dirección del proveedor -->
                  <div>
                    <input type="text" placeholder="Nombre del proveedor" class="block w-full rounded-md py-2.5 px-4 text-dark text-base font-medium border border-gray-300 focus:border-primary focus:outline-0 placeholder:text-light placeholder:text-base">
                  </div>
                  <div class="sm:col-span-2">
                    <input type="text" placeholder="Dirección del establecimiento" class="block w-full rounded-md py-2.5 px-4 text-dark text-base font-medium border border-gray-300 focus:border-primary focus:outline-0 placeholder:text-light placeholder:text-base">
                  </div>
              
                  <!-- Datos del consumidor -->
                  <div class="sm:col-span-2 text-sm font-semibold text-gray-600 mt-4">Datos del consumidor reclamante:</div>
