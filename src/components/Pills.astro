---
interface Props {
    id: string;
    title: string;
    description: string;
    image: string;
    link: string;
    sizeImg: string;
}
const { id, title, description, image, link = '#', sizeImg = 'h-40' } = Astro.props;
---
<button class="bg-primary rounded-4xl flex justify-between items-center py-5 px-4 md:px-14 group hover:drop-shadow-primary-card transition-all duration-500" id={id}>
    <img src={`/recursos/${image}`} alt={title} class={`${sizeImg} group-hover:scale-110 transition-all duration-300`} />
    <div class="text-white w-full text-right">
        <h3 class="text-2xl md:text-4xl font-semibold mb-1">{title}</h3>
        <p class="text-base md:text-lg mb-2">{description}</p>
        {
            link !== '' &&
            <a href={link} class="text-xs font-bold text-primary bg-white border border-primary rounded-full px-7 py-3 transition-colors duration-300 uppercase block w-32 hover:bg-primary hover:text-white hover:border hover:border-white ml-auto">
                Ver lista
            </a>
        }
    </div>
</button>